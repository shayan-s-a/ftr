<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <submitter>Opportunity_Approver</submitter>
        <type>group</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>Description</field>
        <field>CloseDate</field>
        <field>Renewal_MRR__c</field>
        <field>Net_New_MRR__c</field>
        <field>Contract_MRR__c</field>
        <field>CPE_NRC__c</field>
        <field>NRC__c</field>
        <field>Mgr_Signed_Date__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>OpportunityApproval</name>
                <type>Alert</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <type>userHierarchyField</type>
            </approver>
        </assignedApprover>
        <label>Step 1</label>
        <name>Step1</name>
        <rejectionActions>
            <action>
                <name>OpportunityRejected</name>
                <type>Alert</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <emailTemplate>FrontierAdminTemplates/FrontierOpportunityApproval</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <formula>OR( AND(
$Profile.Name = &quot;Frontier System Administrator&quot;, 
NOT( Pricebook2.Name = &apos;Partner Pricebook&apos;), 
NOT( Pricebook2.Name = &apos;Frontier Secure&apos;) 
),
AND(
NOT( Pricebook2.Name = &apos;Partner Pricebook&apos;), 
NOT( Pricebook2.Name = &apos;Frontier Secure&apos;), 
NOT( ISPICKVAL(Mrg_Approved__c, &quot;Closed (Ink)&quot;)),
OR(
ISPICKVAL(StageName,&quot;Closed/Won&quot;),
ispickval(StageName,&quot;Closed/Lost&quot;)),
NOT(AND(CPE_Product_Count__c &gt; 0, CPE_Team_Count__c &lt; 1)) 
))</formula>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>MgrApprovedClosedInk</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Approved_Date</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Manager_s_Email</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>UpdatedSignedDate</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Opportunity_Clear_Mgr_Approved</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>MgrApprovedPending</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Submitted_Date</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Frontier Opportunity Approval</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>true</useApproverFieldOfRecordOwner>
        <userHierarchyField>Manager</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>1</processOrder>
    <recallActions>
        <action>
            <name>Opportunity_Clear_Mgr_Approved</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
