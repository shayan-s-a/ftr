<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>OrderNumber</field>
        <field>Name</field>
        <field>Owner</field>
        <field>Order_Stage__c</field>
        <field>Order_Created_Date__c</field>
        <field>Reject_Reason__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>Approval_to_CNP</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Owner_to_CNP</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>Sales_Engineering</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Sales Engineering</label>
        <name>Sales_Engineering</name>
        <rejectionActions>
            <action>
                <name>Order_Rejected</name>
                <type>Alert</type>
            </action>
            <action>
                <name>Reject_to_AE</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>Stage_to_EWO</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>Customer_Network_Provisioning</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>EWO to be created</label>
        <name>EWO_to_be_created</name>
        <rejectBehavior>
            <type>BackToPrevious</type>
        </rejectBehavior>
        <rejectionActions>
            <action>
                <name>Owner_to_SE_Queue</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Reject_to_SE</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>Stage_to_PSR</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>Customer_Network_Provisioning</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>Stage to PSR in Progress</description>
        <label>EWO In Progress</label>
        <name>EWO_In_Progress</name>
        <rejectBehavior>
            <type>BackToPrevious</type>
        </rejectBehavior>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>Customer_Network_Provisioning</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Complete</label>
        <name>Complete</name>
        <rejectBehavior>
            <type>BackToPrevious</type>
        </rejectBehavior>
    </approvalStep>
    <description>Create Date &lt; = 7/22/2020
Order record types =New Order,Move Order,Change Order,Upgrade/Downgrade Order

Product Type = Ethernet, SDWAN(Prior to 7/22/2020)
Product not = E-Reach, National ELAN or Off-Net Ethernet</description>
    <emailTemplate>unfiled$public/Order_Approval_Notification</emailTemplate>
    <enableMobileDeviceAccess>true</enableMobileDeviceAccess>
    <entryCriteria>
        <booleanFilter>(1 AND 2 AND 3 AND 4 and 7) or (1 AND 3 AND 5 and 6 )</booleanFilter>
        <criteriaItems>
            <field>Order.RecordType</field>
            <operation>equals</operation>
            <value>New Order,Move Order,Change Order,Upgrade/Downgrade Order,Vlocity OM Order,New Order (Partner),Manual Vlocity Order,Ethernet Upgrade/Downgrade - Order (Partner),Ethernet New Order (Partner)</value>
        </criteriaItems>
        <criteriaItems>
            <field>Order.Product_Type__c</field>
            <operation>equals</operation>
            <value>Ethernet</value>
        </criteriaItems>
        <criteriaItems>
            <field>Order.Product__c</field>
            <operation>notEqual</operation>
            <value>E-Reach,Off-Net Ethernet,National ELAN</value>
        </criteriaItems>
        <criteriaItems>
            <field>Order.Add_On_Products__c</field>
            <operation>notEqual</operation>
            <value>Cloud Managed Solutions,Managed Firewall,Managed Security</value>
        </criteriaItems>
        <criteriaItems>
            <field>Order.CreatedDate</field>
            <operation>lessThan</operation>
            <value>7/22/2020</value>
        </criteriaItems>
        <criteriaItems>
            <field>Order.Product_Type__c</field>
            <operation>equals</operation>
            <value>SDWAN</value>
        </criteriaItems>
        <criteriaItems>
            <field>Order.CreatedDate</field>
            <operation>lessThan</operation>
            <value>12/21/2020</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Stage_to_Complete</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Reject_to_AE</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Unlock_Order</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Approve_to_SE</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Lock_Order</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Owner_to_SE_Queue</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Orders CNP</label>
    <processOrder>22</processOrder>
    <recallActions>
        <action>
            <name>Unlock_Order</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
