<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>OrderNumber</field>
        <field>Owner</field>
        <field>Total_ABS_Revenue__c</field>
        <field>ABS_Order_Request_Type__c</field>
        <field>Leased__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Stage_to_QA_Review</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>ABS</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>Order is waiting to be assigned</description>
        <label>Pending ABS Assignment</label>
        <name>Pending_ABS_Assignment</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Stage_to_Ordering</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>Owner</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>Review orders for proper required information and documents.</description>
        <label>Quality Assurance Review</label>
        <name>Quality_Assurance_Review</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>Owner</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>Orders being placed during this stage</description>
        <label>Order Writing</label>
        <name>Order_Writing</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Stage_to_Complete</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>Owner</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Complete Order</label>
        <name>Complete_Order</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <description>Used for Record Type ABS Orders that do not require a Credit Check and No WIP</description>
    <emailTemplate>unfiled$public/Order_Approval_Notification</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <booleanFilter>1 AND (2 OR (3 AND 6) OR (5 AND 7 AND 10) OR (4 AND (7 OR (8 AND 9)))) OR (5 AND 9)</booleanFilter>
        <criteriaItems>
            <field>Order.RecordType</field>
            <operation>equals</operation>
            <value>ABS Order</value>
        </criteriaItems>
        <criteriaItems>
            <field>Order.ABS_Order_Request_Type__c</field>
            <operation>equals</operation>
            <value>Disconnect,Move,Records Only,Transfer of Ownership</value>
        </criteriaItems>
        <criteriaItems>
            <field>Order.ABS_Order_Request_Type__c</field>
            <operation>equals</operation>
            <value>New</value>
        </criteriaItems>
        <criteriaItems>
            <field>Order.ABS_Order_Request_Type__c</field>
            <operation>equals</operation>
            <value>Maintenance: New</value>
        </criteriaItems>
        <criteriaItems>
            <field>Order.ABS_Order_Request_Type__c</field>
            <operation>equals</operation>
            <value>Maintenance: Auto-Renew</value>
        </criteriaItems>
        <criteriaItems>
            <field>Order.Total_ABS_Revenue__c</field>
            <operation>lessThan</operation>
            <value>2500</value>
        </criteriaItems>
        <criteriaItems>
            <field>Order.Total_ABS_Revenue__c</field>
            <operation>lessThan</operation>
            <value>15000</value>
        </criteriaItems>
        <criteriaItems>
            <field>Order.Total_ABS_Revenue__c</field>
            <operation>greaterOrEqual</operation>
            <value>15000</value>
        </criteriaItems>
        <criteriaItems>
            <field>Order.Leased__c</field>
            <operation>equals</operation>
            <value>Yes</value>
        </criteriaItems>
        <criteriaItems>
            <field>Order.Leased__c</field>
            <operation>equals</operation>
            <value>No</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Stage_to_Complete</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Order_Rejected</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Reject_to_AE</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Lock_Order</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Owner_to_ABS</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Stage_to_Pending_Assignment</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>ABS Orders - No Credit Check No WIP</label>
    <processOrder>14</processOrder>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
