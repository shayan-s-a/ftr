<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>OrderNumber</field>
        <field>Name</field>
        <field>Owner</field>
        <field>Order_Stage__c</field>
        <field>Order_Created_Date__c</field>
        <field>Reject_Reason__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>Owner_to_CNP</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Stage_to_CNP_Quality_Assurance</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>Sales_Engineering</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Sales Engineering</label>
        <name>Sales_Engineering</name>
        <rejectionActions>
            <action>
                <name>Order_Rejected</name>
                <type>Alert</type>
            </action>
            <action>
                <name>Reject_to_AE</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Stage_to_PSR</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>Customer_Network_Provisioning</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>CNP Quality Assurance Review</label>
        <name>CNP_Quality_Assurance_Review</name>
        <rejectBehavior>
            <type>BackToPrevious</type>
        </rejectBehavior>
        <rejectionActions>
            <action>
                <name>Owner_to_SE_Queue</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Reject_to_SE</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>Customer_Network_Provisioning</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>PSR in Progress</label>
        <name>PSR_in_Progress</name>
        <rejectBehavior>
            <type>BackToPrevious</type>
        </rejectBehavior>
    </approvalStep>
    <description>Order record types =New Order,Move Order,Change Order,Upgrade/Downgrade Order

Product Type = Ethernet, SDWAN(Prior to 7/22/2020)
Product not = E-Reach, National ELAN or Off-Net Ethernet</description>
    <emailTemplate>unfiled$public/Order_Approval_Notification</emailTemplate>
    <enableMobileDeviceAccess>true</enableMobileDeviceAccess>
    <entryCriteria>
        <booleanFilter>(1 AND 2 AND 3 AND 4 and 7 (8 AND 9)) or (1 AND 3 AND 5 and 6 and (8 AND 9))</booleanFilter>
        <criteriaItems>
            <field>Order.RecordType</field>
            <operation>equals</operation>
            <value>New Order,Move Order,Change Order,Upgrade/Downgrade Order,Vlocity OM Order,New Order (Partner),Manual Vlocity Order,Ethernet Upgrade/Downgrade - Order (Partner),Ethernet New Order (Partner)</value>
        </criteriaItems>
        <criteriaItems>
            <field>Order.Product_Type__c</field>
            <operation>equals</operation>
            <value>Ethernet</value>
        </criteriaItems>
        <criteriaItems>
            <field>Order.Product__c</field>
            <operation>notEqual</operation>
            <value>E-Reach,Off-Net Ethernet,National ELAN</value>
        </criteriaItems>
        <criteriaItems>
            <field>Order.Add_On_Products__c</field>
            <operation>notEqual</operation>
            <value>Cloud Managed Solutions,Managed Firewall,Managed Security</value>
        </criteriaItems>
        <criteriaItems>
            <field>Order.CreatedDate</field>
            <operation>lessThan</operation>
            <value>7/21/2020 9:00 PM</value>
        </criteriaItems>
        <criteriaItems>
            <field>Order.Product_Type__c</field>
            <operation>equals</operation>
            <value>SDWAN</value>
        </criteriaItems>
        <criteriaItems>
            <field>Order.CreatedDate</field>
            <operation>greaterThan</operation>
            <value>12/19/2020 9:00 PM</value>
        </criteriaItems>
        <criteriaItems>
            <field>Order.Is_this_an_E_Reach_Off_Net_Ethernet__c</field>
            <operation>notEqual</operation>
            <value>Yes</value>
        </criteriaItems>
        <criteriaItems>
            <field>Order.Is_this_an_Off_Net__c</field>
            <operation>notEqual</operation>
            <value>Yes</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Stage_to_Complete</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Reject_to_AE</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Unlock_Order</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Approve_to_SE</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Lock_Order</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Owner_to_SE_Queue</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>CNP Orders</label>
    <processOrder>4</processOrder>
    <recallActions>
        <action>
            <name>Unlock_Order</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
