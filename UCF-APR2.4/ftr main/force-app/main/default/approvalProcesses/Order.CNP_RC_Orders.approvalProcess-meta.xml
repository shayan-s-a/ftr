<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>false</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>OrderNumber</field>
        <field>Name</field>
        <field>Owner</field>
        <field>Order_Stage__c</field>
        <field>Order_Created_Date__c</field>
        <field>Reject_Reason__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Stage_to_NCOE_QA_Review</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>Customer_Network_Provisioning</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Customer Network Provisioning</label>
        <name>Customer_Network_Provisioning</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Stage_to_PSR</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>Owner</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>CNP Quality Assurance Review</label>
        <name>CNP_Quality_Assurance_Review</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>Owner</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>PSR in Progress</label>
        <name>PSR_in_Progress</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <description>Create Date &gt; = 01/06/2022
Order Record Type = Records Only Order,Transfer Ownership Order,Contract Renewal,Disconnect Order, New Order Request

Product Type = Ring Cental</description>
    <enableMobileDeviceAccess>true</enableMobileDeviceAccess>
    <entryCriteria>
        <booleanFilter>((1 OR 2 OR 3) AND 4 AND 5)</booleanFilter>
        <criteriaItems>
            <field>Order.RecordType</field>
            <operation>equals</operation>
            <value>,Records Only Order,Transfer Ownership Order,Disconnect Order</value>
        </criteriaItems>
        <criteriaItems>
            <field>Order.RecordType</field>
            <operation>equals</operation>
            <value>New Order</value>
        </criteriaItems>
        <criteriaItems>
            <field>Order.RecordType</field>
            <operation>equals</operation>
            <value>Upgrade/Downgrade Order</value>
        </criteriaItems>
        <criteriaItems>
            <field>Order.ERATE_Customer__c</field>
            <operation>equals</operation>
            <value>False</value>
        </criteriaItems>
        <criteriaItems>
            <field>Order.Product_Type__c</field>
            <operation>equals</operation>
            <value>Ring Central</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Stage_to_Complete</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Order_Rejected</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Reject_to_AE</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Unlock_Order</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Approval_to_Network_COE</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Lock_Order</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Owner_to_Network_COE_NonComplex</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>CNP - RC_Orders</label>
    <processOrder>28</processOrder>
    <recallActions>
        <action>
            <name>Unlock_Order</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
