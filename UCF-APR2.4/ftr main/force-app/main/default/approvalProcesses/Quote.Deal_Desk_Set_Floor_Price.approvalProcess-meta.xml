    <description>Quotes created prior to 3/8/21</description>
    <emailTemplate>FrontierAdminTemplates/Vlocity_Dealdesk_Quote_Approval</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
