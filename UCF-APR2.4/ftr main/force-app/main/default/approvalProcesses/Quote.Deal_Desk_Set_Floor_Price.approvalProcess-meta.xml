        <criteriaItems>
            <field>Quote.Approval_Status__c</field>
            <operation>equals</operation>
            <value>Approval Required</value>
        </criteriaItems>
        <criteriaItems>
            <field>Quote.CreatedDate</field>
            <operation>lessThan</operation>
            <value>3/7/2021 6:00 PM</value>
        </criteriaItems>
    </entryCriteria>
