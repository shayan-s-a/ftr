<aura:component
  implements="force:appHostable,flexipage:availableForRecordHome,force:hasRecordId,force:lightningQuickActionWithoutHeader"
  access="global"
  controller="FTRWSAdjustmentController"
>
  <aura:handler name="init" value="{!this}" action="{!c.init}" />

  <aura:attribute name="quoteItemRecord" type="Object" />
  <aura:attribute name="quoteId" type="Id" />
  <aura:attribute name="showModal" type="boolean" default="false" />
  <aura:attribute name="recurringType" type="String" />
  <aura:attribute name="actualAmt" type="Decimal" />
  <aura:attribute name="adjustedAmt" type="Decimal" />
  <aura:attribute name="discAmt" type="Decimal" />
  <aura:attribute name="showDiscountInfo" type="boolean" default="false" />
  <aura:attribute name="discAppliedBy" type="String" />
  <aura:attribute name="notes" type="String" />
  <!-- Added by Vara from here to -->
  <aura:attribute name="PrimaryCompetitor" type="String" />
  <aura:attribute name="PrimaryCompetitorArea" type="String" />
  <aura:attribute name="PrimaryCompetitorAmt" type="Decimal" />
  <!-- Added by Vara from here to -->	
  <aura:if isTrue="{!v.showModal}">
    <section
      role="dialog"
      tabindex="-1"
      aria-labelledby="modal-heading-01"
      aria-modal="true"
      aria-describedby="modal-content-id-1"
      class="slds-modal slds-fade-in-open"
    >
      <div class="slds-modal__container">
        <header class="slds-modal__header">
          <lightning:buttonIcon
            iconName="utility:close"
            onclick="{!c.hideModel}"
            alternativeText="close"
            variant="bare-inverse"
            class="slds-modal__close"
          />
          <h2
            id="modal-heading-01"
            class="slds-text-heading_medium slds-hyphenate"
          >
            Details
          </h2>
        </header>

        <div
          class="slds-modal__content slds-p-around_large"
          id="modal-content-id-1"
        >
          <lightning:layout multipleRows="true">
          
              <lightning:layoutItem size="8">
              <p class="divStyleBlue">
                <li>Actual {!v.recurringType} Price:</li> <br />
                <!--<aura:if isTrue="{!showDiscountInfo}"> -->
                <li>Discount applied by {!v.discAppliedBy}:</li>
                <!--</aura:if>  -->
              </p>
            </lightning:layoutItem>
            <lightning:layoutItem size="4">
              <p class="divStyleBlack">
                <li
                  ><lightning:formattedNumber
                    value="{!v.actualAmt}"
                    style="currency"
                    currencyCode="USD"/></li
                ><br />
                <!--<aura:if isTrue="{!showDiscountInfo}"> -->
                <li
                  ><lightning:formattedNumber
                    value="{!v.discAmt}"
                    style="currency"
                    currencyCode="USD"
                  />

                  &nbsp;&nbsp;

                  <!--<lightning:button
                    variant="base"
                    label="X"
                    onclick="{!c.deleteDiscount}"></lightning:button> -->
                  <lightning:buttonIcon
                    variant="base"
                    iconName="utility:close"
                    onclick="{!c.deleteDiscount}"
                    alternativeText="Remove Discount"
                  />
                </li>
                <!-- </aura:if> -->
              </p>
            </lightning:layoutItem>
            <!--<aura:if isTrue="{!showDiscountInfo}"> -->
            <lightning:layoutItem size="8">
              <p class="divStyleBorderBlue">
                <li>Adjusted {!v.recurringType} Price:</li>
              </p>
			</lightning:layoutItem>              
            <lightning:layoutItem size="4">
              <p class="divStyleBorderBlue">
                <li>
                  <lightning:formattedNumber
                    value="{!v.adjustedAmt}"
                    style="currency"
                    currencyCode="USD"
                  />
                </li>
              </p>
            </lightning:layoutItem>
	<!-- added by Vara -->
 <!--
            <lightning:layoutItem size="8">
              <p class="divStyleBlue">
                <li>Primary Competitor :</li>                  
              </p>
			</lightning:layoutItem>  
            <lightning:layoutItem size="4">
              <p class="divStyleBlue">
                  <li>{!v.PrimaryCompetitor}</li>
              </p>
			</lightning:layoutItem>               

            <lightning:layoutItem size="8">
              <p class="divStyleBlue">
            	<li>Primary Competitor Amount :</li>
              </p>
			</lightning:layoutItem>               
            <lightning:layoutItem size="4">
              <p class="divStyleBlue">
                  <li>{!v.PrimaryCompetitorAmt}</li>
              </p>
			</lightning:layoutItem>              

            <lightning:layoutItem size="8">
              <p class="divStyleBlue">
            	<li>Competitors in area :</li>                  
              </p>
			</lightning:layoutItem>               
            <lightning:layoutItem size="4">
              <p class="divStyleBlue">
                  <li>{!v.PrimaryCompetitorArea}</li>
              </p>
			</lightning:layoutItem>               
-->             
            <lightning:layoutItem size="8">                
                <p class="divStyleBorderBlue">
                <li>Primary Competitor :</li><br/>
            	<li>Primary Competitor Amount :</li><br/>
            	<li>Competitors in area :</li> 
                </p>
			</lightning:layoutItem>               
            <lightning:layoutItem size="4">
                <p class="divStyleBorderBlue">
                  <li>{!v.PrimaryCompetitor}</li>
                  <li>{!v.PrimaryCompetitorAmt}</li>
                  <li>{!v.PrimaryCompetitorArea}</li>
                </p>
			</lightning:layoutItem> 

<!-- added by Vara up to here -->              
            <!--  </aura:if> -->
              
<lightning:layoutItem size="8">
        <p class="divStyleBlack">            	
                <li>* Discount Notes:</li>
              </p>
              </lightning:layoutItem>
<lightning:layoutItem size="4">
        <p class="divStyleBlack">
                <li>{!v.notes}</li>
              </p>
              </lightning:layoutItem>
              
          </lightning:layout>
        </div>
        <!--Modal/Popup Box Footer Starts here-->
        <footer class="slds-modal__footer">
          <lightning:button
            variant="brand"
            label="Close"
            title="Close"
            onclick="{!c.hideModel}"
          />
          <lightning:button
            variant="brand"
            label="Edit"
            title="Edit"
            onclick="{!c.showEditAdjustmentModal}"
          />
        </footer>
      </div>
    </section>
    <div class="slds-backdrop slds-backdrop_open"></div>
  </aura:if>
</aura:component>