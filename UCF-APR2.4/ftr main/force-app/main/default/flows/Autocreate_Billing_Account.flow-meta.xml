    <decisions>
        <description>Check if account associate to the order is Record type Master or Organization</description>
        <name>Account_is_Master_Or_Organization</name>
        <label>Account is Master Or Organization?</label>
        <locationX>248</locationX>
        <locationY>575</locationY>
        <defaultConnectorLabel>Default Outcome</defaultConnectorLabel>
        <rules>
            <name>Match_Recordtype</name>
            <conditionLogic>or</conditionLogic>
            <conditions>
                <leftValueReference>$Record.Account.RecordType.Name</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Master</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.Account.RecordType.Name</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Organization</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Existing_Billing_Acc</targetReference>
            </connector>
            <label>Match Recordtype</label>
        </rules>
