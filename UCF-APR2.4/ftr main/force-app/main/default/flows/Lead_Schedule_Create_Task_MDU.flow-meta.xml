    <formulas>
        <name>DaysToEndOfContract</name>
        <dataType>Number</dataType>
        <expression>{!$Record.Expiration_of_Competitor_Agreement__c}-TODAY()</expression>
        <scale>0</scale>
    </formulas>
    <formulas>
        <description>Expiration_of_Competitor_Agreement__c</description>
        <name>forT_DaysToEndContract</name>
        <dataType>String</dataType>
        <expression>IF(
    AND(
        {!$Record.Expiration_of_Competitor_Agreement__c} - TODAY() &gt; 365,
        {!$Record.Expiration_of_Competitor_Agreement__c} - TODAY() &lt; 540
    ),
    &quot;Customer Call – Discovery (18M)&quot;,
    IF(
        AND(
            {!$Record.Expiration_of_Competitor_Agreement__c} - TODAY() &gt; 1,
            {!$Record.Expiration_of_Competitor_Agreement__c} - TODAY() &lt; 365
        ),
        &quot;Customer Call – Discovery (12M)&quot;,
        &quot;&quot;
    )
)</expression>
    </formulas>
