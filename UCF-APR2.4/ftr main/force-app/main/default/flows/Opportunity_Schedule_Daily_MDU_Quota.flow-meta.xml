        </defaultConnector>
        <defaultConnectorLabel>No, create a new one</defaultConnectorLabel>
        <rules>
            <name>Yes_update_it</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>GetQuota.Id</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <booleanValue>false</booleanValue>
                </rightValue>
            </conditions>
