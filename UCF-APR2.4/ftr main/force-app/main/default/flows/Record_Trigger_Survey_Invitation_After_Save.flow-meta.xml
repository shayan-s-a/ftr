    <description>For AE Survey, owner will be account owner&apos;s manager/ account owner. 
Consolidated Release v1.0.2
V4 - Assign the Bad response case for CS Survey to the owner&apos;s manager.</description>
    <environments>Default</environments>
    <formulas>
        <name>forT_AECaseOwnerEmail</name>
        <dataType>String</dataType>
        <expression>IF(
  NOT(ISBLANK($Record.Company__r.Owner.ManagerId)),
  ($Record.Company__r.Owner.Manager.Email),
  ($Record.Company__r.Owner.Email)
)</expression>
    </formulas>
    <formulas>
        <name>forT_AECaseOwnerID</name>
        <dataType>String</dataType>
        <expression>IF(
  NOT(ISBLANK($Record.Company__r.Owner.ManagerId)),
  ($Record.Company__r.Owner.ManagerId),
  ($Record.Company__r.OwnerId)
)</expression>
    </formulas>
    <formulas>
        <name>forT_RecordURL</name>
        <dataType>String</dataType>
        <expression>LEFT($Api.Enterprise_Server_URL_510, FIND( &apos;.my.&apos;, $Api.Enterprise_Server_URL_510)) &amp; &apos;my.salesforce.com/&apos;&amp; {!$Record.Id}</expression>
    </formulas>
    <formulas>
        <name>IsNew</name>
        <dataType>Boolean</dataType>
        <expression>ISNew()</expression>
    </formulas>
