<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Only_case_managers_can_close_the_case</fullName>
    <active>true</active>
    <description>Only case managers can close the case</description>
    <errorConditionFormula>AND(
RecordType.Id = &quot;0122F000000Frzl&quot;,
$User.Id &lt;&gt; &quot;005E0000003YGb7&quot;,
$User.Id &lt;&gt; &quot;005E00000060zQY&quot;,
$User.Id &lt;&gt; &quot;005E0000005zugl&quot;,
$User.Id &lt;&gt; &quot;0050L000008yJ2K&quot;,
ISCHANGED( Status ),
ISPICKVAL(Status, &quot;Closed&quot;))</errorConditionFormula>
    <errorMessage>Only case managers can close the case</errorMessage>
</ValidationRule>
