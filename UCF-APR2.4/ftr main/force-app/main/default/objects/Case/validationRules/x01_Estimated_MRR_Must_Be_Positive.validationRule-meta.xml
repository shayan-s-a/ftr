<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>x01_Estimated_MRR_Must_Be_Positive</fullName>
    <active>true</active>
    <description>The Estimated MRR at Risk field should be a positive number.</description>
    <errorConditionFormula>AND(
    RecordType.DeveloperName = &quot;Risk&quot;,
    NOT(ISBLANK(Estimated_MRR_at_Risk__c)),
    Estimated_MRR_at_Risk__c &lt; 0
)</errorConditionFormula>
    <errorDisplayField>Estimated_MRR_at_Risk__c</errorDisplayField>
    <errorMessage>The Estimated MRR at Risk field should be a positive number. 
Case Error x01.</errorMessage>
</ValidationRule>
