<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Hiring_Request_Over_Hire_Req_Fields</fullName>
    <active>true</active>
    <description>If Hire Type = Over Hire, Is Over Hire due to employee on LOA is required.</description>
    <errorConditionFormula>AND
(RecordType.Name = &quot;Hiring Request&quot;,
ISPICKVAL(Reason_for_Replacement__c ,&quot;Over Hire&quot;),
OR(
ISBLANK(TEXT(Is_this_an_Over_Hire_for_an_employee_on__c)))
)</errorConditionFormula>
    <errorDisplayField>Is_this_an_Over_Hire_for_an_employee_on__c</errorDisplayField>
    <errorMessage>Please select a value.</errorMessage>
</ValidationRule>
