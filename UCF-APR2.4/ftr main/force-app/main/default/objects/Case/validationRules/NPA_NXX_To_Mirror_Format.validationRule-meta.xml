<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>NPA_NXX_To_Mirror_Format</fullName>
    <active>true</active>
    <errorConditionFormula>AND(NOT(ISBLANK(NPA_NXX_To_Mirror__c)),
NOT(REGEX(NPA_NXX_To_Mirror__c,&quot;[0-9]{3}/[0-9]{3}&quot;)))</errorConditionFormula>
    <errorDisplayField>NPA_NXX_To_Mirror__c</errorDisplayField>
    <errorMessage>The NPA/NXX must be in the format ###/### where # denotes a numeric digit. (Example: 123/456)</errorMessage>
</ValidationRule>
