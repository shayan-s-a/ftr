<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Contract_Expiration_Date_Mandatory</fullName>
    <active>true</active>
    <errorConditionFormula>AND( 
$RecordType.Name = &quot;Order Management&quot;, 
ISBLANK(TEXT(Contract_Expiration_Date__c)), 
ISPICKVAL(OrderManagement_Type__c, &quot;Contract Renewal&quot;))</errorConditionFormula>
    <errorDisplayField>Contract_Expiration_Date__c</errorDisplayField>
    <errorMessage>Contract Expiration Date Entry is Mandatory</errorMessage>
</ValidationRule>
