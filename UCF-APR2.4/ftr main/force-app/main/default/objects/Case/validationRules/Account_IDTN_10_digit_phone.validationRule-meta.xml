<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Account_IDTN_10_digit_phone</fullName>
    <active>true</active>
    <description>Only 0-9, (, ), -, . and blank space are allowed and must be 10 digits</description>
    <errorConditionFormula>AND(
NOT(ISBLANK(Account_ID_TN__c)),
NOT(REGEX(Account_ID_TN__c, &quot;[0-9. ,-,()]*&quot;)),
LEN(SUBSTITUTE(SUBSTITUTE(SUBSTITUTE(SUBSTITUTE(SUBSTITUTE(Account_ID_TN__c, &quot; &quot;, &quot;&quot;), &quot;.&quot;, &quot;&quot;), &quot;(&quot;, &quot;&quot;), &quot;)&quot;, &quot;&quot;), &quot;-&quot;, &quot;&quot;)) &lt;&gt; 10
)</errorConditionFormula>
    <errorDisplayField>Account_ID_TN__c</errorDisplayField>
    <errorMessage>Only 0-9, (, ), -, . and blank space are allowed and must be 10 digits</errorMessage>
</ValidationRule>
