<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>GlobalServiceAccountPreventContactCreate</fullName>
    <active>true</active>
    <description>Prevent Service &amp; Global Account records from adding contacts to</description>
    <errorConditionFormula>Account.RecordType.Name = &quot;Global&quot;
|| Account.RecordType.Name = &quot;Service&quot;</errorConditionFormula>
    <errorDisplayField>AccountId</errorDisplayField>
    <errorMessage>Global and Service Accounts cannot have contacts.</errorMessage>
</ValidationRule>
