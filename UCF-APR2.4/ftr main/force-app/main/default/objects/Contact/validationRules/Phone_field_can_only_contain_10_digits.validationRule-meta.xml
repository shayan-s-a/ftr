<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Phone_field_can_only_contain_10_digits</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
$RecordType.Id = &quot;012E0000000kEDgIAM&quot;,
NOT(ISNEW()),
NOT(REGEX(Phone, &quot;\\D*?(\\d\\D*?){10}&quot;)))</errorConditionFormula>
    <errorDisplayField>Phone</errorDisplayField>
    <errorMessage>Only 10 digits allowed.</errorMessage>
</ValidationRule>
