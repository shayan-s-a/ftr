<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Reason_for_escalation_is_required</fullName>
    <active>true</active>
    <errorConditionFormula>AND( 
Escalation__c,TRUE, 
ISBLANK(TEXT(Reason_for_Escalation__c) 
))</errorConditionFormula>
    <errorMessage>Reason for Escalation is required if the Escalation field is checked.</errorMessage>
</ValidationRule>
