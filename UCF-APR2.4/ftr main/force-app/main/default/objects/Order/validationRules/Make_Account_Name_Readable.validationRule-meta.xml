<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Make_Account_Name_Readable</fullName>
    <active>false</active>
    <errorConditionFormula>AND(Opportunity.AccountId  &lt;&gt; AccountId, 
OR(ISNEW(),
  DATEVALUE(CreatedDate) &gt; DATEVALUE(&quot;2017-10-11&quot;)))</errorConditionFormula>
    <errorDisplayField>AccountId</errorDisplayField>
    <errorMessage>Account name cannot be changed</errorMessage>
</ValidationRule>
