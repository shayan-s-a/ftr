<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Must_Select_a_Master_Account</fullName>
    <active>true</active>
    <description>To ensure that user from #CTF Small Business User always select a Master Account while creating Agreements of Record Type Product Schedule - CC</description>
    <errorConditionFormula>AND(
 Account.RecordTypeId &lt;&gt; &apos;012E0000000fDc3&apos;,
 $Profile.Id = &apos;00eE0000001A84o&apos;
)</errorConditionFormula>
    <errorDisplayField>AccountId</errorDisplayField>
    <errorMessage>Please select a Master Account</errorMessage>
</ValidationRule>
