<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Audit_Finding_Validation</fullName>
    <active>true</active>
    <errorConditionFormula>AND(ISPICKVAL(Audit_Finding_Summary__c, &quot;Other&quot;), ISPICKVAL(Other_Finding__c, &quot;&quot;), ISBLANK(Additional_Audit_Notes__c))</errorConditionFormula>
    <errorDisplayField>Additional_Audit_Notes__c</errorDisplayField>
    <errorMessage>You have selected &quot;Other&quot; for Audit Finding Summary. You must enter Audit Findings when the appropriate option is unavailable in Audit Finding Details.</errorMessage>
</ValidationRule>
